<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"/>

    <EditText
        android:id="@+id/capacityEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Capacidad requerida"
        android:inputType="number" />

    <CheckBox
        android:id="@+id/projectorCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Necesita proyector?" />

    <CheckBox
        android:id="@+id/digitalBoardCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Pizarra digital?" />

    <CheckBox
        android:id="@+id/accessibilityCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Accesibilidad?" />

    <Button
        android:id="@+id/searchRoomsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar salas disponibles" />

</LinearLayout>